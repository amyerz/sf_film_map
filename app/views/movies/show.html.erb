<div class="poster">
<img src="<%=@result.poster%>"/>
</div>
<br>
<div id="movie_title">
 <%= @movie.movie_title %>
</div>
<br>
<div class="movie-details">
	<br>
	<div>Plot:</div>
	<%= @result.plot %>
    <br>
    <br>
  <div>Date Released:</div>
  <%= @result.year %>
  <br>
  <br>
  <div>Director:</div>
  <%= @movie.director%>
 <br>
 <br>  
  <div>Actors</div>
  <%= @result.actors.join(', ') %>
  <br>
  <br>
  <div>Genre(s):</div>
  <%= @result.genres.join(', ') %>
</div>

<div id="map-canvas" class="movie"></div>

<table>
  <tr>
    <th>Address</th>
  </tr>

<% @movie.locations.each do |location| %>
  <tr>
    <td><%= location.address %></td>
  </tr>
<% end %>
</table>

<script>
  var locationData = <%= @locations.to_json.html_safe %>;
</script>

<%= javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js", "https://maps.googleapis.com/maps/api/js?key=AIzaSyDrCN9KO9IjWfxF2cQ69kievg03j4Mdyi0&sensor=false", "movie_map" %>

<%= link_to 'New Location', new_movie_location_path(@movie) %>

