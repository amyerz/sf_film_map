<div class="poster">
<img src="<%=@result.poster%>"/>
</div>

<div id="movie_title">
  <%= @movie.movie_title %>
</div>

<div class="movie-details">
	<span>Plot:</span>
	<%= @result.plot %>

  <span>Released Year:</span>
  <%= @movie.release_year %>

  <span>Director:</span>
  <%= @movie.director%>

  <span>Actors</span>
  <%= @result.actors.join(', ') %>

  <span>Genre:</span>
  <%= @result.genres.join(',') %>
</div>

	



<%= link_to 'Back', map_path %>

